# Financial Analysis Tool - Environment Variables
# Copy this file to .env and customize as needed

# Secret key for session encryption (generate a secure random string for production)
SECRET_KEY=change-me-in-production-use-a-long-random-string

# Flask environment (development/production)
FLASK_ENV=production

# SSL/HTTPS Configuration
# Set to 'true' to enable HTTPS on port 5443
SSL_ENABLED=false

# Path to SSL certificate and key (inside the container)
# Mount your certificates to ./certs/ directory
SSL_CERT_FILE=/app/certs/cert.pem
SSL_KEY_FILE=/app/certs/key.pem
